<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="xsl/refcard.xsl"?>
<root>

  <mapping>
    <section name="command">
      <map>
        <keys>F</keys>
        <description>enable tail -f like behvaior, Ctrl-C to break out of it</description>
      </map>
      <map>
        <keys>v</keys>
        <description>open file in $EDITOR for editing, defaults to vi/vim</description>
      </map>
      <map>
        <keys>-N</keys>
        <description>show line numbers</description>
      </map>
      <map>
        <keys>-S</keys>
        <description>disable line wrapping</description>
      </map>
    </section>

    <section name="navigation">
      <map>
        <keys>q or ZZ</keys>
        <description>exit</description>
      </map>
      <map>
        <keys>gg</keys>
        <description>go to the beginning of the buffer</description>
      </map>
      <map>
        <keys>G</keys>
        <description>go to the end of buffer</description>
      </map>

      <map>
        <keys>j</keys>
        <description>navigate forward by one line</description>
      </map>
      <map>
        <keys>k</keys>
        <description>navigate backward by one line</description>
      </map>
      <map>
        <keys>CTRL+f</keys>
        <description>forward one window</description>
      </map>
      <map>
        <keys>CTRL+b</keys>
        <description>backward one window</description>
      </map>
    </section>      

    <section name="search">
      <map>
        <keys>/</keys>
        <description>search forward</description>
      </map>
      <map>
        <keys>?</keys>
        <description>search backward</description>
      </map>
      <map>
        <keys>n</keys>
        <description>continue searching for your pattern in the same direction</description>
      </map>
      <map>
        <keys>N</keys>
        <description>continue searching for your pattern in the opposite direction</description>
      </map>
      <map>
        <keys>-I / -i</keys>
        <description>ignore case in your search pattern</description>
      </map>
    </section>
  
  </mapping>
</root>

